extends layout

block content
  h1= title
  p Welcome to #{title}
  p making changes in index.pug 
  button(type='button', class="btn btn-light", onClick="update()") Press me
  
  div(id='target') Display 
  a(href='/jewelry') jewelry page link
  script.
      let client_count = 0;
      function update() {
        client_count = client_count+1;
        document.getElementById("target").innerHTML = `Value now ${client_count}`  ;
      }