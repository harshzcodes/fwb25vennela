extends layout

block content
  h1= title
  p Welcome to the Jewelry pug
  div(class="container-fluid")
        div(class="row")
            -
                let jewelry = [
                    {
                        "brand": "SVNR",
                        "material": "Gold",
                        "cost": "fifty USD"
                    },
                    {
                        "brand": "Idyl",
                        "material": "Silver",
                        "cost": "Six hundred USD"
                    },
                    {
                        "brand": "Kinn Studio",
                        "material": "Platinum",
                        "cost": "Three hundred USD"
                    },                   
                ]
            each n,index in jewelry
                div(class="col-sm-2" onclick=`buy(${index})`) #{n.brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{n.material}
                div(class="col-sm-2" onclick=`buy(${index})`) #{n.cost}
  script.                
    function buy(product)
    {
        alert(`Purchased Item ${product+1}`)
    }